<div class="contents row">
  <% @cheats.each do |cheat| %>
    <div class="content_post" style="background-image: url(<%= cheat.image %>);">
      <div class="more">
        <span><%= image_tag 'arrow_top.png' %></span>
        <ul class="more_list">
          <li>
          <%= link_to '詳細', cheat_path(cheat.id), method: :get %>
          </li>
          <li>
            <%= link_to '編集', edit_cheat_path(cheat.id), method: :get %>
          </li>
          <li>
            <%= link_to '削除', cheat_path(cheat.id), method: :delete %>
          </li>
        </ul>
      </div>
      <p><%= cheat.name %></p>
      <span class="name">
          <span>投稿者</span><%= cheat.user.nickname %>
      </span>
    </div>
    <%= cheat.explanation %>
  <% end %>
</div>