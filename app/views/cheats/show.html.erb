<div class="contents row">
  <div class="content_post">
  <%= image_tag @cheat.image.variant(resize: '500x500') %>
    <div class="more">
      <span><%= image_tag 'arrow_top.png' %></span>
      <ul class="more_list">
        <li>
          <%= link_to '編集', edit_cheat_path(@cheat.id), method: :get %>
        </li>
        <li>
          <%= link_to '削除', cheat_path(@cheat.id), method: :delete %>
        </li>
      </ul>
    </div>
    <p><%= @cheat.name %></p>
  </div>
  <%= @cheat.explanation %>
</div>