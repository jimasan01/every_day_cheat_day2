<div class="contents row">
  <div class="container">
    <h3>編集する</h3>
    <%= form_with(model: @cheat, local: true) do |form| %>
      <%= form.text_field :name, placeholder: "名前" %>
      <%= form.file_field :image %>
      <%= form.text_area :explanation, placeholder: "説明や感想など", rows: "10" %>
      <%= form.submit "投稿" %>
    <% end %>
  </div>
</div>