<div class="contents row">
  <div class="container">
    <h3>投稿する</h3>
    <%= form_with(model: @cheat, local: true) do |form| %>
      <%= form.text_field :name, placeholder: "name" %>
      <%= form.text_field :image, placeholder: "Image Url" %>
      <%= form.text_area :explanation, placeholder: "text", rows: "10" %>
      <%= form.submit "投稿" %>
    <% end %>
  </div>
</div>